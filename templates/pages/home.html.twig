{% extends 'base.html.twig' %}

{% block title 'Welcome | ' ~ parent() %}

{% block body %}
    <img 
        src="{{ asset('/img/quebec-flag.png') }}"
        alt="Quebec Flag"
        class="mt-12 h-32 rounded shadow-md mx-auto"
    >
    
    <h1 class="mt-5 text-3xl sm:text-5xl font-semibold text-indigo-600">
        Hello from Quebec!
    </h1>
    <p class="text-lg text-gray-800">
        It's currently {{ 'now'|date('H:i A') }}.
    </p>
{% endblock %}
